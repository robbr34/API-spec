        "create"
      ],
      "description": "Data needed to write information about a cause",
      "properties": {
        "code": {
          "type": "string",
          "description": "Code of the cause",
          "maxLength": 4
        },
        "causeGroupCode": {
          "type": "string",
          "description": "Code of the Cause Group",
          "maxLength": 8
        }
      },
      "required": [
        "code",
        "causeGroupCode"
      ]
    },
    "NotificationEventWriteModel": {
