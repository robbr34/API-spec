          }
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NotificationTaskWriteModel"
          }
        }
      },
      "required": [
        "notification",
        "conditionbasedWorkRequest"
      ]
    },
    "CWBRUpdateModel": {
      "title": "CWBRUpdateModel",
      "type": "object",
      "properties": {
        "notification": {
          "$ref": "#/definitions/NotificationWriteModel"
        },
        "CBWR": {
          "$ref": "#/definitions/CBWRWriteModel"
        }
      }
