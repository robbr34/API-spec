  "definitions": {
    "DamageWriteModel": {
      "title": "DamageWriteModel",
      "type": "object",
      "description": "The data needed to write data for a damage",
      "x-tags": [
        "Notifications",
        "create"
      ],
      "x-examples": {
        "example-1": {}
      },
      "properties": {
        "code": {
          "type": "string",
          "description": "Code of the damage",
          "maxLength": 4
        },
        "damageGroupCode": {
          "type": "string",
          "description": "Code for the Damage Group",
          "maxLength": 8
        },
        "Causes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CauseWriteModel"
          }
        }
      },
      "required": [
        "code",
        "damageGroupCode"
      ]
    },
    "NotificationTaskWriteModel": {
      "title": "NotificationTaskWriteModel",
      "type": "object",
      "description": "The data needed to write notification task",
      "x-tags": [
        "Notifications",
        "create"
      ],
      "properties": {
        "code": {
          "type": "string",
          "description": "Description of the task",
          "maxLength": 4
        },
        "longDescription": {
          "type": "string",
          "description": "A long description of the task"
        },
        "plannedStartDate": {
          "type": "string",
          "format": "date"
        },
        "plannedEndDate": {
          "type": "string",
          "format": "date"
        },
        "NotificatoinTaskTypeCode": {
          "type": "string",
          "description": "The code of the Notification Task Type"
        },
        "partyResponsibleIdentification": {
          "type": "string",
          "description": "Identification of the party reponsible for the task"
        },
        "notificationTaskGroupCode": {
          "type": "string",
          "maxLength": 8
        },
        "comment": {
          "type": "string"
        },
        "longComment": {
          "type": "string"
        },
        "completedDate": {
          "type": "string",
          "format": "date"
        },
        "partyResponsibleType": {
          "type": "string",
          "enum": [
            "department",
            "person",
            "alias",
            "user"
          ]
        },
        "partyCompletiingIdentification": {
          "type": "string"
        },
        "damageNumber": {
          "type": "string",
          "maxLength": 12,
          "pattern": "9*"
        }
      },
      "required": [
        "code",
        "notificationTaskGroupCode"
      ]
    },
    "CauseWriteModel": {
      "title": "causeCreateModel",
      "type": "object",
